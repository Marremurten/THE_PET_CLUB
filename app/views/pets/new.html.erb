<div class="container">

  <div class="text-center">
    <h1>Add your Pet</h1>
  </div>

  <div>
    <%= simple_form_for @pet do |f| %>
          <%= f.input :name %>
          <%= f.input :species %>
          <%= f.input :age%>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
          <%=f.button :submit, "Post my pet", class: "btn-flat"%>
    <% end %>
  </div>
</div>
