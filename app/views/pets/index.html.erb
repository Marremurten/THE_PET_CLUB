<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'dog-running.jpg' %>');">
  <div class="banner-content">
    <h1>Walk me</h1>
    <p>Take these pets out</p>
    <%= link_to "Add a pet", new_pet_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% if pet.photo? %>
          <% background_url = cl_image_path pet.photo, width: 400, height: 500, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?pet' %>
        <% end %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
          <div class="card-description">
            <h2><%= pet.name %></h2>
          </div>
          <%= link_to "", pet_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>






